extends layout

block content              

 .jumbotron.jumbotron-fluid
      .container
        h1 A탑uriranje podataka organizacije
        p
          | Za a탑uriranje podataka potrebno je izmjeniti 탑eljeni podatak.
    .container
      .container
        form.form-horizontal(action='/#{user._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
          .form-group.row
            .col-sm-2
              label.label-text Naziv
            .col-sm-6
              input#name.form-control.form-control-sm-6(type='text', name='name', value='#{user.name}', required='')
          .form-group.row
            .col-sm-2
              label.label-text OIB
            .col-sm-6
              input#oib.form-control.form-control-sm-6(type='number', name='oib', value='#{user.oib}', required='')
          .form-group.row
            .col-sm-2
              label.label-text Adresa
            .col-sm-6
              input#address.form-control.form-control-sm(type='text', name='address', value='#{user.address}', required='')
          .form-group.row
            .col-sm-2
              label.label-text Grad
            .col-sm-6
              input#city.form-control.form-control-sm(type='text', name='city', value='#{user.city}', required='')
          .form-group.row
            .col-sm-2
              label.label-text Telefon
            .col-sm-6
              input#phone.form-control.form-control-sm(type='number', name='phone', value='#{user.phone}', required='')
          .form-group.row
            .col-sm-2
              label.label-text Email
            .col-sm-6
              input#email.form-control.form-control-sm(type='email', name='email', value='#{user.email}', required='')

        
          .form-group.row
            .col-sm-2
              input(type='hidden',value='PUT',name='_method')
            .col-sm-6
              button#btnSubmit.btn.btn-info(type="submit") A탑uriraj
         
