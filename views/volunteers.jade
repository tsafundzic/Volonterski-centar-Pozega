extends layout

block content

    .jumbotron.jumbotron-fluid
      .container
        h1 Pregled dostupnih poslova
        p
          | Trenutna potražnja za volonterima.
    .container
      .container
            table.table
                - each volunteer, i in volunteers
                
                    thead.thead-light
                        tr
                        th(scope='col') ID
                        th(scope='col') #{volunteer._id}
                    tbody
                        tr
                            th(scope='row') Datum rođenja
                            td #{volunteer.dateOfBirth}
                        tr
                            th(scope='row') Grad
                            td #{volunteer.city}
                        tr
                            th(scope='row') Poznavanje engleskog
                            td #{volunteer.english_level}
                        tr
                            th(scope='row') Rad na računalu
                            td #{volunteer.computer_skill}
                        tr
                            th(scope='row') Vrijeme volontiranja
                            td #{volunteer.volunteering_availability}
                        tr
                            th(scope='row') Količina tjednog volontiranja
                            td #{volunteer.volunteering_time}
                         
                         tr
                            th(scope='row') 
                            td 

        a(href='/') Nazad