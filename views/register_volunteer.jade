extends layout

block content              

 .jumbotron.jumbotron-fluid
      .container
        h1 Registracija volontera
        p
          | Za upis volontera u bazu podataka potrebno je popuniti potrebne podatke i poslati ih.
    .container
      .container
        form.form-horizontal(method='POST' action='/users/register_volunteer')
          .form-group.row
            .col-sm-3
              label.label-text Ime i prezime
            .col-sm-6
              input#name.form-control.form-control-sm-6(type='text', name='name', placeholder='Ime i prezime', required='')
          .form-group.row
            .col-sm-3
              label.label-text Datum rođenja
            .col-sm-6
              input#oib.form-control.form-control-sm-6(type='date', name='datumrodenja', required='')
          .form-group.row
            .col-sm-3
              label.label-text Spol
            .col-sm-6
              label.custom_radio.rad
                | Ženski
                input(type='radio', checked='checked', name='spol', value='zenski')
                span.checkmark_radio
              label.custom_radio
                | Muški
                input(type='radio', name='spol', value='muski')
                span.checkmark_radio
          .form-group.row
            .col-sm-3
              label.label-text Email
            .col-sm-6
              input#email.form-control.form-control-sm(type='email', name='email', placeholder='Email', required='')
          .form-group.row
            .col-sm-3
              label.label-text Telefon
            .col-sm-6
              input#phone.form-control.form-control-sm(type='number', name='phone', placeholder='Broj mobitela/telefona', required='')
          .form-group.row
            .col-sm-3
              label.label-text Adresa
            .col-sm-6
              input#address.form-control.form-control-sm(type='adresa', name='address', placeholder='Adresa', required='')
          .form-group.row
            .col-sm-3
              label.label-text Grad
            .col-sm-6
              input#city.form-control.form-control-sm(type='text', name='city', placeholder='Grad', required='')
          .form-group.row
            .col-sm-3
              label.label-text Poznavanje engleskog 
            .col-sm-6
              label.custom_radio.rad
                | Engleski jezik ne poznaje
                input(type='radio', checked='checked', name='poznavanjeengleskog', value='Engleski jezik ne poznaje')
                span.checkmark_radio
              label.custom_radio.rad
                | Engleski jezik osnovno
                input(type='radio', name='poznavanjeengleskog', value='Engleski jezik osnovno')
                span.checkmark_radio
              label.custom_radio.rad
                | Engleski jezik srednje
                input(type='radio', name='poznavanjeengleskog', value='Engleski jezik srednje')
                span.checkmark_radio
              label.custom_radio.rad
                | Engleski jezik napredno
                input(type='radio', name='poznavanjeengleskog', value='Engleski jezik napredno')
                span.checkmark_radio
          .form-group.row
            .col-sm-3
              label.label-text Rad na računalu
            .col-sm-6
              label.custom_radio.rad
                | Ne poznaje rad na računalu
                input(type='radio', checked='checked', name='poznavanjeradanaracunalu', value='Ne poznaje rad na računalu')
                span.checkmark_radio
              label.custom_radio.rad
                | Osnovno poznavanje rada na računalu
                input(type='radio', name='poznavanjeradanaracunalu', value='Osnovno poznavanje rada na računalu')
                span.checkmark_radio
              label.custom_radio.rad
                | Srednje poznavanje rada na računalu
                input(type='radio', name='poznavanjeradanaracunalu', value='Srednje poznavanje rada na računalu')
                span.checkmark_radio
              label.custom_radio.rad
                | Napredno poznavanje rada na računalu
                input(type='radio', name='poznavanjeradanaracunalu', value='Napredno poznavanje rada na računalu')
                span.checkmark_radio
          .form-group.row
            .col-sm-3
              label.label-text Vrijeme volontiranja
            .col-sm-6
              label.custom_radio.rad
                | Prijepodne
                input(type='radio', checked='checked', name='vrijemezavolontiranje', value='Prijepodne')
                span.checkmark_radio
              label.custom_radio.rad
                | Poslijepodne
                input(type='radio', name='vrijemezavolontiranje', value='Poslijepodne')
                span.checkmark_radio
              label.custom_radio.rad
                | Vikendom
                input(type='radio', name='vrijemezavolontiranje', value='Vikendom')
                span.checkmark_radio
              label.custom_radio.rad
                | Subotom
                input(type='radio', name='vrijemezavolontiranje', value='Subotom')
                span.checkmark_radio
              label.custom_radio.rad
                | Nedjeljom
                input(type='radio', name='vrijemezavolontiranje', value='Nedjeljom')
                span.checkmark_radio
              label.custom_radio.rad
                | Svakidan
                input(type='radio', name='vrijemezavolontiranje', value='Svakidan')
                span.checkmark_radio
              label.custom_radio.rad
                | Po potrebi
                input(type='radio', name='vrijemezavolontiranje', value='Po potrebi')
                span.checkmark_radio
          .form-group.row
            .col-sm-3
              label.label-text Količina tjednog volontiranja
            .col-sm-6
              label.custom_radio.rad
                | 1 - 2 sata
                input(type='radio', checked='checked', name='satitjedno', value='1 - 2 sata')
                span.checkmark_radio
              label.custom_radio.rad
                | 4 - 5 sati
                input(type='radio', name='satitjedno', value='4 - 5 sati')
                span.checkmark_radio
              label.custom_radio.rad
                | 8 sati
                input(type='radio', name='satitjedno', value='8 sati')
                span.checkmark_radio
              label.custom_radio.rad
                | Više od 8 sati
                input(type='radio', name='satitjedno', value='Više od 8 sati')
                span.checkmark_radio
          .form-group.row
            .col-sm-3
              label.label-text Lozinka
            .col-sm-6 
              input#password.form-control.form-control-sm(type='password', placeholder='Lozinka' name='password', required='')
          .form-group.row
            .col-sm-3
              label.label-text Lozinka
            .col-sm-6 
              input#password2.form-control.form-control-sm(type='password', placeholder='Potvrdi lozinku' name='password2', required='')
          .form-group.row
            .col-sm-3
            .col-sm-6
              br
              .g-recaptcha(data-sitekey='6LfgqEQUAAAAAGK5S3afLkHAzui-uP9TCzPI1GoQ', required='')
              br
          .form-group.row
            .col-sm-3
            .col-sm-6
              input.btn.btn-info.btn-lg.btn-block(type='submit', name='submit', value='Registriraj se')
         
