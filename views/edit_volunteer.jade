extends layout

block content              

 .jumbotron.jumbotron-fluid
      .container
        h1 Ažuriranje podataka volontera
        p
          | Za ažuriranje podataka potrebno je izmjeniti željeni podatak.
    .container
      .container
        form.form-horizontal(action='/#{user._id}/edit_volunteer',method='post',enctype='application/x-www-form-urlencoded')
          .form-group.row
            .col-sm-3
              label.label-text Ime i prezime
            .col-sm-6
              input#name.form-control.form-control-sm-6(type='text', name='name', value='#{user.name}', required='')
          
          .form-group.row
            .col-sm-3
              label.label-text Spol
            .col-sm-6
              label.custom_radio.rad
                | Ženski
                if user.sex=='ženski'
                  input(type='radio', checked='checked', name='spol', value='ženski')
                else
                  input(type='radio', name='spol', value='ženski')
                span.checkmark_radio
              label.custom_radio
                | Muški
                if user.spol=='muški'
                  input(type='radio', checked='checked', name='spol', value='muški')
                else
                  input(type='radio', name='spol', value='muški')
                span.checkmark_radio
          .form-group.row
            .col-sm-3
              label.label-text Email
            .col-sm-6
              input#email.form-control.form-control-sm(type='email', name='email', value='#{user.email}', required='')
          .form-group.row
            .col-sm-3
              label.label-text Telefon
            .col-sm-6
              input#phone.form-control.form-control-sm(type='number', name='phone', value='#{user.phone}', required='')
          .form-group.row
            .col-sm-3
              label.label-text Adresa
            .col-sm-6
              input#address.form-control.form-control-sm(type='adresa', name='address', value='#{user.address}', required='')
          .form-group.row
            .col-sm-3
              label.label-text Grad
            .col-sm-6
              input#city.form-control.form-control-sm(type='text', name='city', value='#{user.city}', required='')
          .form-group.row
            .col-sm-3
              label.label-text Poznavanje engleskog 
            .col-sm-6
              label.custom_radio.rad
                | Engleski jezik ne poznaje
                if user.english_level=='Engleski jezik ne poznaje'
                  input(type='radio', checked='checked', name='poznavanjeengleskog', value='Engleski jezik ne poznaje')
                else
                  input(type='radio',  name='poznavanjeengleskog', value='Engleski jezik ne poznaje')
                span.checkmark_radio
              label.custom_radio.rad
                | Engleski jezik osnovno
                if user.english_level=='Engleski jezik osnovno'
                  input(type='radio', checked='checked', name='poznavanjeengleskog', value='Engleski jezik osnovno')
                else
                  input(type='radio', name='poznavanjeengleskog', value='Engleski jezik osnovno')
                span.checkmark_radio
              label.custom_radio.rad
                | Engleski jezik srednje
                if user.english_level=='Engleski jezik srednje'
                  input(type='radio', checked='checked', name='poznavanjeengleskog', value='Engleski jezik srednje')
                else
                  input(type='radio', name='poznavanjeengleskog', value='Engleski jezik srednje')
                span.checkmark_radio
              label.custom_radio.rad
                | Engleski jezik napredno
                if user.english_level=='Engleski jezik napredno'
                  input(type='radio', checked='checked', name='poznavanjeengleskog', value='Engleski jezik napredno')
                else                
                  input(type='radio', name='poznavanjeengleskog', value='Engleski jezik napredno')
                span.checkmark_radio
          .form-group.row
            .col-sm-3
              label.label-text Rad na računalu
            .col-sm-6
              label.custom_radio.rad
                | Ne poznaje rad na računalu
                if user.computer_skill=='Ne poznaje rad na računalu'
                  input(type='radio', checked='checked', name='poznavanjeradanaracunalu', value='Ne poznaje rad na računalu')
                else
                  input(type='radio', name='poznavanjeradanaracunalu', value='Ne poznaje rad na računalu')
                span.checkmark_radio
              label.custom_radio.rad
                | Osnovno poznavanje rada na računalu
                if user.computer_skill=='Osnovno poznavanje rada na računalu'
                  input(type='radio', checked='checked', name='poznavanjeradanaracunalu', value='Osnovno poznavanje rada na računalu')
                else
                  input(type='radio', name='poznavanjeradanaracunalu', value='Osnovno poznavanje rada na računalu')
                span.checkmark_radio
              label.custom_radio.rad
                | Srednje poznavanje rada na računalu
                if user.computer_skill=='Srednje poznavanje rada na računalu'
                  input(type='radio', checked='checked', name='poznavanjeradanaracunalu', value='Srednje poznavanje rada na računalu')
                else
                  input(type='radio', name='poznavanjeradanaracunalu', value='Srednje poznavanje rada na računalu')
                span.checkmark_radio
              label.custom_radio.rad
                | Napredno poznavanje rada na računalu
                if user.computer_skill=='Napredno poznavanje rada na računalu'
                  input(type='radio', checked='checked', name='poznavanjeradanaracunalu', value='Napredno poznavanje rada na računalu')
                else
                  input(type='radio', name='poznavanjeradanaracunalu', value='Napredno poznavanje rada na računalu')
                span.checkmark_radio
          .form-group.row
            .col-sm-3
              label.label-text Vrijeme volontiranja
            .col-sm-6
              label.custom_radio.rad
                | Prijepodne
                if user.volunteering_availability=='Prijepodne'
                  input(type='radio', checked='checked', name='vrijemezavolontiranje', value='Prijepodne')
                else
                  input(type='radio', name='vrijemezavolontiranje', value='Prijepodne')
                span.checkmark_radio
              label.custom_radio.rad
                | Poslijepodne
                if user.volunteering_availability=='Poslijepodne'
                  input(type='radio', checked='checked', name='vrijemezavolontiranje', value='Poslijepodne')
                else
                  input(type='radio', name='vrijemezavolontiranje', value='Poslijepodne')
                span.checkmark_radio
              label.custom_radio.rad
                | Vikendom
                if user.volunteering_availability=='Vikendom'
                  input(type='radio', checked='checked', name='vrijemezavolontiranje', value='Vikendom')
                else
                  input(type='radio', name='vrijemezavolontiranje', value='Vikendom')
                span.checkmark_radio
              label.custom_radio.rad
                | Subotom
                if user.volunteering_availability=='Subotom'
                 input(type='radio', checked='checked', name='vrijemezavolontiranje', value='Subotom')
                else
                  input(type='radio', name='vrijemezavolontiranje', value='Subotom')
                span.checkmark_radio
              label.custom_radio.rad
                | Nedjeljom
                if user.volunteering_availability=='Nedjeljom'
                  input(type='radio', checked='checked', name='vrijemezavolontiranje', value='Nedjeljom')
                else
                  input(type='radio', name='vrijemezavolontiranje', value='Nedjeljom')
                span.checkmark_radio
              label.custom_radio.rad
                | Svakidan
                if user.volunteering_availability=='Svakidan'
                  input(type='radio', checked='checked', name='vrijemezavolontiranje', value='Svakidan')
                else
                  input(type='radio', name='vrijemezavolontiranje', value='Svakidan')
                span.checkmark_radio
              label.custom_radio.rad
                | Po potrebi
                if user.volunteering_availability=='Po potrebi'
                  input(type='radio', checked='checked', name='vrijemezavolontiranje', value='Po potrebi')
                else
                  input(type='radio', name='vrijemezavolontiranje', value='Po potrebi')
                span.checkmark_radio
          .form-group.row
            .col-sm-3
              label.label-text Količina tjednog volontiranja
            .col-sm-6
              label.custom_radio.rad
                | 1 - 2 sata
                if user.volunteering_time=='1 - 2 sata'
                  input(type='radio', checked='checked', name='satitjedno', value='1 - 2 sata')
                else
                  input(type='radio', name='satitjedno', value='1 - 2 sata')
                span.checkmark_radio
              label.custom_radio.rad
                | 4 - 5 sati
                if user.volunteering_time=='4 - 5 sati'
                  input(type='radio', checked='checked', name='satitjedno', value='4 - 5 sati')
                else
                  input(type='radio', name='satitjedno', value='4 - 5 sati')
                span.checkmark_radio
              label.custom_radio.rad
                | 8 sati
                if user.volunteering_time=='8 sati'
                  input(type='radio', checked='checked', name='satitjedno', value='8 sati')
                else
                  input(type='radio', name='satitjedno', value='8 sati')
                span.checkmark_radio
              label.custom_radio.rad
                | Više od 8 sati
                if user.volunteering_time=='Više od 8 sati'
                  input(type='radio', checked='checked', name='satitjedno', value='Više od 8 sati')
                else
                  input(type='radio', name='satitjedno', value='Više od 8 sati')
                span.checkmark_radio          
          .form-group.row
            .col-sm-3
              input(type='hidden',value='PUT',name='_method')
            .col-sm-6
              button#btnSubmit.btn.btn-info(type="submit") Ažuriraj
         
